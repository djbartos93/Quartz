<!DOCTYPE html>
<html>
  <head>
    <title>Quartz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <section id="header-main">
      <%= render "shared/main_header" %>
      <% if current_user %>

    <% end %>
</section>

  </head>

  <body class="bg-primary">
    <% if notice %>
    <div class="section">

      <div class="container is-fluid notification is-info">
      <p class="alert alert-success has-text-centered"><%= notice %></p>
    <% end %>
    <% if alert %>
    <div class="section">
    <div class="container is-fluid notification is-danger">
      <p class="alert alert-danger has-text-centered"><%= alert %></p>
    <% end %>
  </div>
</div>
  <div class="section">
    <div class="columns">
      <div class="column">
        <%= yield %>
      </div>
      <div class="column is-narrow">


        <script src="https://mcapi.us/scripts/minecraft.js"></script>
    <div class="server-status">
      Omniscient MC Forge is <span class="server-online"></span>!
    </div>
    <script>
      MinecraftAPI.getServerStatus('forge.omniscientmc.com', {
        port: 25565 // optional, only if you need a custom port
      }, function (err, status) {
        if (err) {
          return document.querySelector('.server-status').innerHTML = 'Error loading status';
        }

        // you can change these to your own message!
        document.querySelector('.server-online').innerHTML = status.online ? 'Online' : 'Offline';
      });
    </script>

        <iframe src="https://discordapp.com/widget?id=500701959989493760&theme=dark" width="350" height="500" allowtransparency="true" frameborder="0"></iframe>
      </div>
    </div>
  </div>
  </body>
  <div class="footer-placement">
  <%= render "shared/main_footer" %>
</div>
</html>
